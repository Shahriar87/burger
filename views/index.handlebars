<div class="container">
    <div class="jumbotron bg-warning">
        <div class="text-center">
            <img src="http://img.time2draw.com/2015/01/How-to-Draw-Burger-Food-final-step-215x382.png" style="width: 100px; height: 180px">
            <h2>Eat Da Burger!</h2>
        </div>
        <br>
        <div class="row">
            <div class="col-md-6">
                <h3>Burgers yet to be devoured</h3>
                <ol>
                    {{#each burgers}}
                    {{#unless devoured}}
                    <li>
                        {{burger_name}}
                        <button class="devour" data-id="{{id}}" data-status="{{devoured}}">
                            Devour it!
                        </button>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ol>
            </div>

            <div class="col-md-6">
                <h3>Burgers that were devoured</h3>
                <ol>
                    {{#each burgers}}
                    {{#if devoured}}
                    <li>
                        {{burger_name}}
                    </li>
                    {{/if}}
                    {{/each}}
                </ol>
            </div>
        </div>

        <div class="text-center">
            <h3>Add a Burger!</h3>
            <form class="create-form">

                <div class="form-group">
                    <label for="bu"><b>Burger Name:</b></label>
                    <input type="text" id="bu" name="name" style="width: 500px;">
                </div>

                <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>

</div>